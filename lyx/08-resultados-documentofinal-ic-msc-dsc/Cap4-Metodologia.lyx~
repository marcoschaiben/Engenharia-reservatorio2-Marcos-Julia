	scale 40

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
Processo de combustão 
\begin_inset Quotes eld
\end_inset

in-situ
\begin_inset Quotes erd
\end_inset

.
\begin_inset CommandInset label
LatexCommand label
name "fig:Processo-de-combustão"

\end_inset


\end_layout

